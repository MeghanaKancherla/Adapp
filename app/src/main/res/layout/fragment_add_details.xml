<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addverDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        tools:context=".view.AddDetailsFragment">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="410dp"
            android:layout_height="33dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/curve_reactangle_night"
            android:backgroundTint="@color/Blue300"
            android:text="@string/add_details"
            android:textAlignment="center"
            android:textColor="#171616"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/adDetailImg"
            android:layout_width="0dp"
            android:layout_height="318dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adDetailsTitleT"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/adDetailsTitleT"
            android:layout_width="203dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="27dp"
            android:background="@drawable/curve_reactangle_night"
            android:backgroundTint="@color/Blue300"
            android:padding="@dimen/padding"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/adDetailPriceT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/adDetailPriceT"
            android:layout_width="137dp"
            android:layout_height="41dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/curve_reactangle_night"
            android:backgroundTint="@color/Blue300"
            android:padding="@dimen/padding"
            android:text="@string/rupee"
            android:textColor="@color/pinkRed"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/adDetailDescT"
            android:layout_width="0dp"
            android:layout_height="71dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/curve_reactangle_night"
            android:backgroundTint="@color/Blue300"
            android:padding="@dimen/padding"
            app:layout_constraintEnd_toEndOf="@+id/adDetailImg"
            app:layout_constraintStart_toStartOf="@+id/adDetailImg"
            app:layout_constraintTop_toBottomOf="@+id/adDetailImg" />

        <TextView
            android:id="@+id/adDetailLocT"
            android:layout_width="374dp"
            android:layout_height="54dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/curve_reactangle_night"
            android:backgroundTint="@color/Blue200"
            android:padding="@dimen/padding"
            app:drawableStartCompat="@android:drawable/ic_dialog_map"
            app:drawableTint="@color/navy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/adDetailDescT"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/adDetailDescT"
            app:layout_constraintTop_toBottomOf="@+id/adDetailDescT" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>