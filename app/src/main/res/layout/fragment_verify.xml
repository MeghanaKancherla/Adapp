<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verifyDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.VerifyFragment">

    <TextView
        android:id="@+id/verifyDetailsTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:text="@string/verify"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernameVerifyET"
        android:layout_width="376dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/verifyDetailsTV"
        app:layout_constraintStart_toStartOf="@+id/verifyDetailsTV"
        app:layout_constraintTop_toBottomOf="@+id/userprofileVerifyIV" />

    <EditText
        android:id="@+id/contactVerifyET"
        android:layout_width="376dp"
        android:layout_height="41dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/usernameVerifyET"
        app:layout_constraintStart_toStartOf="@+id/usernameVerifyET"
        app:layout_constraintTop_toBottomOf="@+id/usernameVerifyET" />

    <EditText
        android:id="@+id/locationVerifyET"
        android:layout_width="376dp"
        android:layout_height="41dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/contactVerifyET"
        app:layout_constraintStart_toStartOf="@+id/contactVerifyET"
        app:layout_constraintTop_toBottomOf="@+id/contactVerifyET" />

    <ImageView
        android:id="@+id/userprofileVerifyIV"
        android:layout_width="150dp"
        android:layout_height="147dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@+id/verifyDetailsTV"
        app:layout_constraintStart_toStartOf="@+id/verifyDetailsTV"
        app:layout_constraintTop_toBottomOf="@+id/verifyDetailsTV"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/postB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="@string/postadd"
        app:layout_constraintEnd_toEndOf="@+id/locationVerifyET"
        app:layout_constraintStart_toStartOf="@+id/locationVerifyET"
        app:layout_constraintTop_toBottomOf="@+id/locationVerifyET" />

</androidx.constraintlayout.widget.ConstraintLayout>